@model YummyProject.Models.Booking

@if (ViewBag.Message != null)
{
    <div class="alert alert-success">
        <strong>Başarılı!</strong> @ViewBag.Message
    </div>
}

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger">
        <strong>Hata!</strong> @ViewBag.ErrorMessage
    </div>
}

@using (Html.BeginForm("DefaultBooking", "Default", FormMethod.Post, new { @class = "php-email-form", role = "form" }))
{
    @Html.AntiForgeryToken()
    <div class="row gy-4">
        <div class="col-lg-4 col-md-6">
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Your Name", required = "required" })
            @Html.ValidationMessageFor(m => m.Name)
        </div>
        <div class="col-lg-4 col-md-6">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Your Email", required = "required" })
            @Html.ValidationMessageFor(m => m.Email)
        </div>
        <div class="col-lg-4 col-md-6">
            @Html.TextBoxFor(m => m.phone, new { @class = "form-control", placeholder = "Your Phone", required = "required" })
            @Html.ValidationMessageFor(m => m.phone)
        </div>
        <div class="col-lg-4 col-md-6">
            @Html.TextBoxFor(m => m.BookingDate, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date", placeholder = "Date", required = "required" })
            @Html.ValidationMessageFor(m => m.BookingDate)
        </div>
        <div class="col-lg-4 col-md-6">
            @Html.TextBoxFor(m => m.PersonCount, new { @class = "form-control", placeholder = "# of people", required = "required" })
            @Html.ValidationMessageFor(m => m.PersonCount)
        </div>
    </div>

    <div class="form-group mt-3">
        @Html.TextAreaFor(m => m.MessageContent, new { @class = "form-control", rows = 5, placeholder = "Message" })
        @Html.ValidationMessageFor(m => m.MessageContent)
    </div>

    <div class="text-center mt-3">
        <div class="loading">Loading</div>
        <div class="error-message"></div>
        <div class="sent-message">Your booking request was sent. We will call back or send an Email to confirm your reservation. Thank you!</div>
        <button type="submit">Rezervasyon Yap</button>
    </div>
}
